<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FindPlaceFragment">

    <!-- TODO: Update blank fragment layout -->


    <EditText
        android:id="@+id/fragment_find_place_editText_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="63dp"

        android:ems="10"
        android:inputType="textPersonName"
        android:text=""
        app:layout_constraintStart_toStartOf="@+id/fragment_find_place_listView_searchResults"
        app:layout_constraintTop_toTopOf="@+id/fragment_find_place_button_search" />

    <TextView
        android:id="@+id/fragment_find_place_textView_search"
        android:layout_width="152dp"
        android:layout_height="0dp"
        android:layout_marginStart="63dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="61dp"
        android:text="search :"
        app:layout_constraintBottom_toTopOf="@+id/fragment_find_place_editText_search"
        app:layout_constraintEnd_toEndOf="@+id/fragment_find_place_editText_search"
        app:layout_constraintStart_toStartOf="@+id/fragment_find_place_listView_searchResults"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/fragment_find_place_button_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="48dp"
        android:text="Search"
        app:layout_constraintStart_toEndOf="@+id/fragment_find_place_editText_search"
        app:layout_constraintTop_toTopOf="parent" />

    <ListView
        android:id="@+id/fragment_find_place_listView_searchResults"
        android:layout_width="0dp"
        android:layout_height="563dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragment_find_place_editText_search" />


</android.support.constraint.ConstraintLayout>